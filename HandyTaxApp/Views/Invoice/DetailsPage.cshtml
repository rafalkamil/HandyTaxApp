@model Invoice;

@{
    ViewData["Title"] = "UpsertPage";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden/>
    <input asp-for="ImageURL" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Faktura nr: @Model.InvoiceNumber</h2>
            <hr />
        </div>
        <div class="row mb-3"> 
            <div class="col-6">
                <label asp-for="InvoiceContractor">Wystawiajacy: </label>
                <a>@Model.InvoiceContractor</a>
            </div>
            <div class="col-6">
                <label asp-for="InvoiceDate">Data wystawienia: </label>
                <a>@Model.InvoiceDate</a>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="InvoiceSum">Koszt Netto: </label>
                <a>@Model.InvoiceSum</a>
            </div>
            <div class="col-6">
                <label asp-for="InvoiceSumVat">Koszt VAT: </label>
                <a>@Model.InvoiceSumVat</a>
            </div>
            
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="InvoiceDescription">Rodzaj kosztu: </label>
                <a>@Model.InvoiceDescription</a>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="InvoiceContractorPostalCode">Kod pocztowy: </label>
                <a>@Model.InvoiceContractorPostalCode</a>
            </div>
            <div class="col-6">
                <label asp-for="InvoiceContractorAddress">Adres Wystawiajacego: </label>
                <a>@Model.InvoiceContractorAddress</a>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
               <img src="@Model.ImageURL" style="border-radius:5px;border:1px;width:50%"/>
           </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                    <a asp-controller="Invoice" asp-action="UpsertPage" asp-route-id="@Model.Id" class="btn btn-primary mx-2" style="width:100%">
                    <img src="/lib/bootstrap/icons/gear.svg" alt="Bootstrap" width="20" height="20">
                            Edit
                    </a>
            </div>
            <div class="col-6">
                    <a asp-controller="Invoice" asp-action="DeletePage" asp-route-id="@Model.Id" class="btn btn-danger mx-2" style="width:100%">
                    <img src="/lib/bootstrap/icons/trash.svg" alt="Bootstrap" width="20" height="20">
                            Delete
                    </a>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12">
                <a asp-controller="Invoice" asp-action="Index" class="btn btn-primary" style="width:100%">Take Me Back</a>
            </div>
        </div>
    </div>
</form>

                